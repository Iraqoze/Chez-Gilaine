<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".FoodItemTemplateActivity"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_cart_view_img"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/text_view_title_food_item_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view_cart_view_img"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="16dp"
            android:text="Food Title"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text_view_price_food_item_template"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_title_food_item_template"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textSize="16dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            android:text="Food Price" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>